@model NIH_ReSyp.Models.capcompform1
@{
    ViewBag.Title = "Sequent-Peak Analysis";
}

<link href="~/lib/css/style.css" rel="stylesheet" />

<div class="col-md-8  offset-3">

    @using (Html.BeginForm("Sequent_Peak_Analysis", "CapComp", FormMethod.Post, new { @class = "", id = "frm", style = "font-color:#000;  font-family: 'Lato' !important;" }))
    {
        @Html.AntiForgeryToken()
        
       

        @*@Html.ValidationSummary(true, "", new { @class = "text-danger" })*@
        <div class=" ">
            @Html.LabelFor(model => model.Title_of_problem, htmlAttributes: new { @class = "" , style = "font-size:14px; font-weight: normal; font-color:#000;  font-family: 'Lato' !important;" })
            <br />
            @Html.EditorFor(model => model.Title_of_problem, new { htmlAttributes = new { @class = "text-box-nih", id = "TitleofProblem", placeholder = "Sample Data for Sequent Peak Analysis", style = "width:450px !important; height:35px; border:1.5px solid black; border-radius:3px; margin-bottom:8px;" } })
            @*@Html.ValidationMessageFor(model => model.Title_of_problem, "", new { @class = "text-danger" })*@

        </div>

        <div class=" ">
            @Html.LabelFor(model => model.Name_of_Reservoir, htmlAttributes: new { @class = " ", style = "font-size:14px; font-weight: normal;" })
            <br />
            @Html.EditorFor(model => model.Name_of_Reservoir, new { htmlAttributes = new { @class = " ", id = "NameofReservoir", placeholder = "Test Reservoir", style = "width:450px; height:35px; border:1.5px solid black; border-radius:3px; margin-bottom:8px;" } })
            @*@Html.ValidationMessageFor(model => model.Name_of_Reservoir, "", new { @class = "text-danger" })*@

        </div>

        <div class=" ">
            @Html.LabelFor(model => model.Starting_year, htmlAttributes: new { @class = " ", style = "font-size:14px; font-weight: normal;" })
            <br />
            @Html.EditorFor(model => model.Starting_year, new { htmlAttributes = new { @class = " ",  style = "width:450px; height:35px; border:1.5px solid black; border-radius:3px; margin-bottom:8px;", id = "StartingYear", placeholder = "1935", type = "number", min = "1900", max = "2020", maxlength = "9", oninput = "this.value=this.value.slice(0,this.maxLength||1/1);this.value=(this.value   < 1) ? (1/1) : this.value;" } })
            @*@Html.ValidationMessageFor(model => model.Starting_year, "", new { @class = "text-danger" })*@

        </div>

        <div class=" ">
            @Html.LabelFor(model => model.Starting_Month, htmlAttributes: new { @class = " ", style = "font-size:14px; font-weight: normal;" })
            <br />
            @Html.EditorFor(model => model.Starting_Month, new { htmlAttributes = new { @class = " ", style = "width:450px; height:35px; border:1.5px solid black; border-radius:3px; margin-bottom:8px;",id = "StartingMonth", placeholder = "1", type = "number", min = "1", max = "12", maxlength = "9", oninput = "this.value=this.value.slice(0,this.maxLength||0/0);this.value=(this.value   < 0) ? (0/0) : this.value;" } })
            @*@Html.ValidationMessageFor(model => model.Starting_Month, "", new { @class = "text-danger" })*@

        </div>

        <div class=" ">
            @Html.LabelFor(model => model.No_of_month_for_analysis, htmlAttributes: new { @class = "  ", style = "font-size:14px; font-weight: normal;" })
            <br />
            @Html.EditorFor(model => model.No_of_month_for_analysis, new { htmlAttributes = new { @class = " ", id = "NumberOfYearsForAnalysis", style = "width:450px; height:35px; border:1.5px solid black; border-radius:3px; margin-bottom:8px;", placeholder = "30", type = "number", min = "0", max = "2000000000", maxlength = "9", oninput = "this.value=this.value.slice(0,this.maxLength||0/0);this.value=(this.value   < 0) ? (0/0) : this.value;" } })
            @*@Html.ValidationMessageFor(model => model.No_of_years_for_analysis, "", new { @class = "text-danger" })*@

        </div>

        <div class=" ">
            @Html.LabelFor(model => model.Demand_each_year, htmlAttributes: new { @class = " ", style = "font-size:14px; font-weight: normal;" })
            <br />
            @Html.DropDownListFor(model => model.Demand_each_year, new SelectList(ViewBag.lis), htmlAttributes: new { @class = "  ", id = "DemandVaryEachYear", style = "width:450px; height:35px; border:1.5px solid black; border-radius:3px; margin-bottom:8px;" })
            @*@Html.EditorFor(model => model.Demand_each_year, new { htmlAttributes = new { @class = "form-control" } })*@
            @*@Html.ValidationMessageFor(model => model.Demand_each_year, "", new { @class = "text-danger" })*@

