        <div class="">
            @Html.LabelFor(model => model.Converting_Inflows_to_CuM, htmlAttributes: new { @class = " ", style = "font-size:14px; font-weight: normal;" })
            <br />
            @Html.EditorFor(model => model.Converting_Inflows_to_CuM, new { htmlAttributes = new { @class = " ", style = "width:450px; height:35px; border:1.5px solid black; border-radius:3px; margin-bottom:8px;", id = "FactorForConvertingInflow", placeholder = "1000000", type = "decimal", min = "0", max = "20000000000", maxlength = "9", oninput = "this.value=this.value.slice(0,this.maxLength||0/0);this.value=(this.value   < 0) ? (0/0) : this.value;" } })
